<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cat_gallery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cartoon_sky"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="jetsetappfull.paint.CatGallery">


    <ScrollView
        android:id="@+id/pic_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_menu">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/playMusicCatGallery"
                            style="@style/colorButton"
                            android:layout_width="40dp"
                            android:layout_height="45dp"
                            android:layout_margin="2dp"
                            android:layout_marginEnd="7dp"
                            android:background="@drawable/music"
                            android:contentDescription="@string/play_music"
                            android:padding="2dp"
                            android:scaleType="fitStart" />


                        <TextView
                            android:id="@+id/catSelectText"
                            style="@style/GalleryTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="2dp"
                            android:shadowColor="@color/colorRed"
                            android:shadowDx="6"
                            android:shadowDy="-6"
                            android:shadowRadius="3"
                            android:text="@string/gallery_title" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cat11"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/cat11"
                        android:scaleType="fitCenter"
                        android:tag="cat11" />

                    <ImageView
                        android:id="@+id/cat12"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/cat12"
                        android:scaleType="fitCenter"
                        android:tag="cat12" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cat1"
                        style="@style/galleryIcon"
                        android:cropToPadding="false"
                        android:onClick="setBackground"
                        android:src="@drawable/cat1"
                        android:scaleType="fitCenter"
                        android:tag="cat1" />

                    <ImageView
                        android:id="@+id/cat2"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/cat2"
                        android:scaleType="fitCenter"
                        android:tag="cat2" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cat5"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/cat5"
                        android:scaleType="fitCenter"
                        android:tag="cat5" />

                    <ImageView
                        android:id="@+id/cat6"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/cat6"
                        android:scaleType="fitCenter"
                        android:tag="cat6" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cat7"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/cat7"
                        android:scaleType="fitCenter"
                        android:tag="cat7" />

                    <ImageView
                        android:id="@+id/cat8"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/cat8"
                        android:scaleType="fitCenter"
                        android:tag="cat8" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cat9"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/cat9"
                        android:scaleType="fitCenter"
                        android:tag="cat9" />

                    <ImageView
                        android:id="@+id/cat10"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/cat10"
                        android:scaleType="fitCenter"
                        android:tag="cat10" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cat3"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/cat3"
                        android:scaleType="fitCenter"
                        android:tag="cat3" />

                    <ImageView
                        android:id="@+id/cat4"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/cat4"
                        android:scaleType="fitCenter"
                        android:tag="cat4" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cat15"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/cat15"
                        android:tag="cat15" />

                    <ImageView
                        android:id="@+id/cat14"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/cat14"
                        android:tag="cat14" />


                </TableRow>

            </TableLayout>

        </RelativeLayout>
        
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <include
            android:id="@+id/button_menu"
            layout="@layout/button_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal" />

    </LinearLayout>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_gallery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cartoon_sky"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jetsetappfull.paint.DogGallery">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_menu">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/playMusicDogGallery"
                            style="@style/colorButton"
                            android:layout_width="40dp"
                            android:layout_height="45dp"
                            android:layout_margin="2dp"
                            android:layout_marginEnd="7dp"
                            android:background="@drawable/music"
                            android:padding="2dp"
                            android:contentDescription="@string/play_music"
                            android:scaleType="fitStart" />


                        <TextView
                            android:id="@+id/dogSelectText"
                            style="@style/GalleryTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="2dp"
                            android:shadowColor="@color/colorRed"
                            android:shadowDx="6"
                            android:shadowDy="-6"
                            android:shadowRadius="3"
                            android:text="@string/gallery_title" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/dog1"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/dog1"
                        android:scaleType="fitCenter"
                        android:tag="dog1" />

                    <ImageView
                        android:id="@+id/dog3"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/dog3"
                        android:scaleType="fitCenter"
                        android:tag="dog3" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/dog4"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/dog4"
                        android:scaleType="fitCenter"
                        android:tag="dog4" />

                    <ImageView
                        android:id="@+id/dog5"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/dog5"
                        android:scaleType="fitCenter"
                        android:tag="dog5" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/dog6"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/dog6"
                        android:scaleType="fitCenter"
                        android:tag="dog6" />

                    <ImageView
                        android:id="@+id/dog7"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/dog7"
                        android:scaleType="fitCenter"
                        android:tag="dog7" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/dog8"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/dog8"
                        android:scaleType="fitCenter"
                        android:tag="dog8" />

                    <ImageView
                        android:id="@+id/dog9"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/dog9"
                        android:scaleType="fitCenter"
                        android:tag="dog9" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/dog10"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/dog10"
                        android:scaleType="fitCenter"
                        android:tag="dog10" />

                    <ImageView
                        android:id="@+id/dog11"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/dog11"
                        android:scaleType="fitCenter"
                        android:tag="dog11" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/dog12"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/dog12"
                        android:scaleType="fitCenter"
                        android:tag="dog12" />

                    <ImageView
                        android:id="@+id/dog13"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/dog13"
                        android:scaleType="fitCenter"
                        android:tag="dog13" />
                </TableRow>

            </TableLayout>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <include
            android:id="@+id/button_menu"
            layout="@layout/button_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal" />

    </LinearLayout>


</RelativeLayout>

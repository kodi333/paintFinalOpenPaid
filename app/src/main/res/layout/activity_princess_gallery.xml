<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_gallery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cartoon_sky"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jetsetappfull.paint.PrincessGallery">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_menu">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/playMusicOtherGallery"
                            style="@style/colorButton"
                            android:layout_width="40dp"
                            android:layout_height="45dp"
                            android:layout_margin="2dp"
                            android:layout_marginEnd="7dp"
                            android:background="@drawable/music"
                            android:padding="2dp"
                            android:contentDescription="@string/play_music"
                            android:scaleType="fitStart" />


                        <TextView
                            android:id="@+id/otherSelectText"
                            style="@style/GalleryTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="2dp"
                            android:shadowColor="@color/colorRed"
                            android:shadowDx="6"
                            android:shadowDy="-6"
                            android:shadowRadius="3"
                            android:text="@string/gallery_title" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/princess1"
                        style="@style/galleryIcon"
                        android:layout_width="match_parent"
                        android:onClick="setBackground"
                        android:src="@drawable/princess1"
                        android:scaleType="fitCenter"
                        android:tag="princess1" />

                    <ImageView
                        android:id="@+id/princess2"
                        style="@style/galleryIcon"
                        android:layout_width="match_parent"
                        android:onClick="setBackground"
                        android:src="@drawable/princess2"
                        android:scaleType="fitCenter"
                        android:tag="princess2" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/princess3"
                        style="@style/galleryIcon"
                        android:layout_width="match_parent"
                        android:onClick="setBackground"
                        android:src="@drawable/princess3"
                        android:scaleType="fitCenter"
                        android:tag="princess3" />

                    <ImageView
                        android:id="@+id/princess4"
                        style="@style/galleryIcon"
                        android:layout_width="match_parent"
                        android:onClick="setBackground"
                        android:src="@drawable/princess4"
                        android:scaleType="fitCenter"
                        android:tag="princess4" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/princess5"
                        style="@style/galleryIcon"
                        android:layout_width="match_parent"
                        android:onClick="setBackground"
                        android:src="@drawable/princess5"
                        android:scaleType="fitCenter"
                        android:tag="princess5" />

                    <ImageView
                        android:id="@+id/princess6"
                        style="@style/galleryIcon"
                        android:layout_width="match_parent"
                        android:onClick="setBackground"
                        android:src="@drawable/princess6"
                        android:scaleType="fitCenter"
                        android:tag="princess6" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/princess7"
                        style="@style/galleryIcon"
                        android:layout_width="match_parent"
                        android:onClick="setBackground"
                        android:src="@drawable/princess7"
                        android:scaleType="fitCenter"
                        android:tag="princess7" />

                    <ImageView
                        android:id="@+id/princess8"
                        style="@style/galleryIcon"
                        android:layout_width="match_parent"
                        android:onClick="setBackground"
                        android:src="@drawable/princess8"
                        android:scaleType="fitCenter"
                        android:tag="princess8" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/princess9"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/princess9"
                        android:scaleType="fitCenter"
                        android:tag="princess9" />

                    <ImageView
                        android:id="@+id/princess10"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/princess10"
                        android:tag="princess10" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/princess11"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/princess11"
                        android:scaleType="fitCenter"
                        android:tag="princess11" />

                    <ImageView
                        android:id="@+id/princess12"
                        style="@style/galleryIcon"
                        android:onClick="setBackground"
                        android:src="@drawable/princess12"
                        android:scaleType="fitCenter"
                        android:tag="princess12" />

                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <include
            android:id="@+id/button_menu"
            layout="@layout/button_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal" />

    </LinearLayout>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_gallery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cartoon_sky"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="jetsetapp.paint.UnicornGallery">


    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <include
            android:id="@+id/button_menu"
            layout="@layout/button_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/pic_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_menu">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/playMusicUnicornGallery"
                            style="@style/colorButton"
                            android:layout_width="40dp"
                            android:layout_height="45dp"
                            android:layout_margin="2dp"
                            android:layout_marginEnd="7dp"
                            android:background="@drawable/music"
                            android:padding="2dp"
                            android:contentDescription="@string/play_music"
                            android:scaleType="fitStart" />


                        <TextView
                            android:id="@+id/uniSelectText"
                            style="@style/GalleryTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="2dp"
                            android:shadowColor="@color/colorRed"
                            android:shadowDx="6"
                            android:shadowDy="-6"
                            android:shadowRadius="3"
                            android:text="@string/gallery_title" />

                    </LinearLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/uni1"
                            style="@style/galleryIcon"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:onClick="setBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/uni1"
                            android:tag="uni1" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/uni2"
                            style="@style/galleryIcon"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:onClick="setBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/uni2"
                            android:tag="uni2" />


                    </RelativeLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/uni3"
                            style="@style/galleryIcon"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:onClick="setBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/uni3"
                            android:tag="uni3" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/uni4"
                            style="@style/galleryIcon"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:onClick="setBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/uni4"
                            android:tag="uni4" />


                    </RelativeLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/uni5"
                            style="@style/galleryIcon"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:onClick="setBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/uni5"
                            android:tag="uni5" />


                    </RelativeLayout>

                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/uni6"
                            style="@style/galleryIcon"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:onClick="setBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/uni6"
                            android:tag="uni6" />


                    </RelativeLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/uni7"
                            style="@style/galleryIcon"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:onClick="setBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/uni7"
                            android:tag="uni7" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/uni8"
                            style="@style/galleryIcon"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:onClick="setBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/uni8"
                            android:tag="uni8" />


                    </RelativeLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/uni9"
                            style="@style/galleryIcon"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:onClick="setBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/uni9"
                            android:tag="uni9" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/uni10"
                            style="@style/galleryIcon"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:onClick="setBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/uni10"
                            android:tag="uni10" />


                    </RelativeLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/uni11"
                            style="@style/galleryIcon"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:onClick="setBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/uni11"
                            android:tag="uni11" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/uni12"
                            style="@style/galleryIcon"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:onClick="setBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/uni12"
                            android:tag="uni12" />


                    </RelativeLayout>


                </TableRow>


            </TableLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>

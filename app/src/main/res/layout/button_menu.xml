<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/dogs"
            style="@style/bottomButton"
            android:layout_gravity="left"
            android:layout_weight="0.25"
            app:srcCompat="@drawable/bottom_menu_dog4" />

        <ImageButton
            android:id="@+id/cats"
            style="@style/bottomButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25"
            app:srcCompat="@drawable/bottom_menu_cat1" />

        <ImageButton
            android:id="@+id/princess"
            style="@style/bottomButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25"
            app:srcCompat="@drawable/bottom_menu_princess2" />

        <ImageButton
            android:id="@+id/unicorn"
            style="@style/bottomButton"
            android:layout_gravity="right"
            android:layout_weight="0.25"
            app:srcCompat="@drawable/bottom_menu_unicorn" />

    </LinearLayout>

</LinearLayout>
